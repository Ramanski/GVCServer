@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Popups

    <div class="col-lg-12 control-section" id="target">
        <SfDialog Target="#target" Width="800px" Height="90%" IsModal="true" ShowCloseIcon="true">
            <DialogTemplates>
                <Header> @Title </Header>
                <Content>
                    @ChildContent
                </Content>
            </DialogTemplates>
            <DialogButtons>
                <DialogButton IsPrimary="true" Content="@OKButtonName" OnClick="@OKClick" />
            </DialogButtons>
            <DialogEvents Closed="@DialogClose" OnOverlayClick="@OverlayClick"></DialogEvents>
        </SfDialog>
    </div>
<style>
    a, a:hover, .highcontrast #dialog a, .highcontrast #dialog a:hover {
        color: inherit;
        text-decoration: none;
    }

    .bootstrap4 #target .e-dialog {
        height: 305px;
    }

    #target .e-dialog {
        height: 370px;
    }

    #target {
        height: 600px;
    }
</style>


@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string OKButtonName { get; set; } = "ОК";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback DialogClose { get; set; }
    [Parameter] public EventCallback OverlayClick { get; set; }
    [Parameter] public EventCallback OKClick { get; set; }
}
