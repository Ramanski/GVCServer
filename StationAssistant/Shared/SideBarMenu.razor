@page "/sidebar/sidebar-dock"
@using Syncfusion.Blazor.Navigations

<div class="col-lg-12 col-sm-12 col-md-12">
    <div id="wrapper">
        <SfSidebar Width="220px" DockSize="72px" EnableDock="true" Position="@SidebarPosition.Left" @ref="Sidebar" HtmlAttributes="@HtmlAttribute">
            <ChildContent>
                <div class="dock">
                    <ul>
                        <li class="sidebar-item">
                            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="@Toggle">
                                <span class="oi oi-home" aria-hidden="true"></span> Главная
                            </NavLink>
                        </li>
                        <li class="sidebar-item">
                            <NavLink class="nav-link" href="arrival">
                                <span class="oi oi-list-rich" aria-hidden="true"></span> Прибытие
                            </NavLink>
                        </li>
                        <li class="sidebar-item">
                            <NavLink class="nav-link" href="departure">
                                <span class="oi oi-list-rich" aria-hidden="true"></span> Отправление
                            </NavLink>
                        </li>
                        <li class="sidebar-item">
                            <NavLink class="nav-link" href="paths">
                                <span class="oi oi-eye" aria-hidden="true"></span> Пути
                            </NavLink>
                        </li>
                        <li class="sidebar-item">
                            <NavLink class="nav-link" href="statistic">
                                <span class="oi oi-cloud-upload" aria-hidden="true"></span> Статистика
                            </NavLink>
                        </li>
                        <AuthorizeView Roles=@Role.Admin>
                            <Authorized>
                                <li class="sidebar-item">
                                    <NavLink class="nav-link" href="updater">
                                        <span class="oi oi-plus" aria-hidden="true"></span> Обновление НСИ
                                    </NavLink>
                                </li>
                                <li class="sidebar-item">
                                    <NavLink class="nav-link" href="register">
                                        <span class="oi oi-person" aria-hidden="true"></span> Новый пользователь
                                    </NavLink>
                                </li>
                            </Authorized>
                        </AuthorizeView>
                        <AuthorizeView>
                            <Authorized>
                                <li class="sidebar-item">
                                    <NavLink class="nav-link" href="logout">
                                        <span class="oi oi-account-logout" aria-hidden="true"></span> Выйти
                                    </NavLink>
                                </li>
                            </Authorized>
                            <NotAuthorized>
                                <li class="sidebar-item">
                                    <NavLink class="nav-link" href="login">
                                        <span class="oi oi-account-login" aria-hidden="true"></span> Войти
                                    </NavLink>
                                </li>
                            </NotAuthorized>
                        </AuthorizeView>
                    </ul>
                </div>
            </ChildContent>
        </SfSidebar>
        <!-- end of sidebar element -->     
    </div>
</div>

@code {
    SfSidebar Sidebar;
    private SidebarPosition Position { get; set; }

    public void Toggle()
    {
        this.Sidebar.Toggle();
    }

    Dictionary<string, object> HtmlAttribute = new Dictionary<string, object>()
    {
        {"class", "dockSidebar" }
    };
